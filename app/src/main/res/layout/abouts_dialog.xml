<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="480dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_lock"
        android:orientation="vertical">

        <TextView
            style="@style/SettingTitleStyle"
            android:layout_marginTop="25dp"
            android:text="关于" />

        <LinearLayout
            android:layout_width="480dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/SettingTextStyle"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:text="名称：集控系统"
                android:textSize="25dp" />

            <TextView
                style="@style/SettingTextStyle"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:text="型号：LedView300"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_version"
                style="@style/SettingTextStyle"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:text="版本：1.0"
                android:textSize="25dp" />

            <TextView
                style="@style/SettingTextStyle"
                android:layout_gravity="left"
                android:layout_marginBottom="20dp"
                android:text="联系方式：0553-3026095"
                android:textSize="25dp" />

            <TextView
                style="@style/SettingTextStyle"
                android:layout_gravity="left"
                android:text="版权所有：安徽华夏显示技术股份有限公司"
                android:textSize="25dp" />


        </LinearLayout>

        <Button
            android:id="@+id/abouts_confirm"
            style="@style/ConfirmButtonStyle"
            android:layout_marginTop="20dp"
            android:text="确定" />

    </LinearLayout>
</RelativeLayout>