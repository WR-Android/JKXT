<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTransparent" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke android:width="3px" android:color="@color/darkgreen" />

            <size android:width="195dp" android:height="60dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorTransparent" />
            <corners android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke android:width="3px" android:color="@color/limegreen" />

            <size android:width="195dp" android:height="60dp" />
        </shape>
    </item>
</selector>
