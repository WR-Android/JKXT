<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:width="120dp" android:height="80dp" />
            <gradient
                android:angle="90"
                android:endColor="#148FE5"
                android:centerColor="#1252A3"
                android:startColor="#148FE5"
                android:type="linear" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <size android:width="120dp" android:height="80dp" />
            <gradient
                android:angle="90"
                android:endColor="#1253A5"
                android:centerColor="#022C66"
                android:startColor="#1253A5"
                android:type="linear" />
            <corners
                android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#333333" />
        </shape>
    </item>
</selector>
